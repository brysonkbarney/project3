    <main id="main">

        <div id="filterPopup" class="filter-popup">
            <button id="closeFilterPopup" class="close-button">&times;</button>
            <form action="/filter" method="GET" class="filter-bar">
                <div class="filter-bar">
                    <div class="filter-item">
                        <label for="filter-type">Type:</label>
                        <select id="filter-type" name="type">
                            <option value="">Any</option>
                            <option value="Just me, myself, & I">Just me, myself, & I</option>
                            <option value="First date">First date</option>
                            <option value="Date night with my significant other">Date night with my significant other
                            </option>
                            <option value="Group Activity">Group Activity</option>
                            <!-- Add more options based on your database contents -->
                        </select>
                    </div>

                    <div class="filter-item">
                        <label for="filter-location">City Location:</label>
                        <select id="filter-location" name="location">
                            <option value="Doesn't Matter">Doesn't Matter</option>
                            <option value="Provo">Provo</option>
                            <option value="Orem">Orem</option>
                            <option value="Lehi">Lehi</option>
                            <option value="American Fork">American Fork</option>
                            <option value="Salt Lake City">Salt Lake City</option>
                            <option value="Midway">Midway</option>
                            <option value="Park City">Park City</option>
                            <!-- Add more options based on your database contents -->
                        </select>
                    </div>

                    <div class="filter-item">
                        <label for="filter-price">Price:</label>
                        <select id="filter-price" name="price">
                            <option value="">Any</option>
                            <option value="free">Free</option>
                            <option value="$0-$15">$0-$15</option>
                            <option value="$15-$30">$15-$30</option>
                            <option value="$30-50">$30-50</option>
                            <option value="$50+">$50+</option>
                            <!-- Add more options based on your database contents -->
                        </select>
                    </div>

                    <div class="filter-item">
                        <label for="filter-duration">Duration:</label>
                        <select id="filter-duration" name="duration">
                            <option value="">Any</option>
                            <option value="1" label="1">
                            <option value="2" label="2">
                            <option value="3" label="3">
                            <option value="4" label="4">
                            <option value="5" label="5">
                            <option value="6" label="6">
                            <option value="7" label="7">
                            <option value="8" label="8">
                            <option value="9" label="9">
                                <!-- Add more options based on your database contents -->
                        </select>
                    </div>

                    <div class="filter-item">
                        <label for="filter-time_of_day">Time of Day:</label>
                        <select id="filter-time_of_day" name="time_of_day">
                            <option value="Doesn't Matter">Doesn't Matter</option>
                            <option value="Morning">Morning</option>
                            <option value="Afternoon">Afternoon</option>
                            <option value="Evening">Evening</option>
                            <!-- Add more options based on your database contents -->
                        </select>
                    </div>

                    <div class="filter-item">
                        <label for="filter-season">Season:</label>
                        <select id="filter-season" name="season">
                            <option value="">Any</option>
                            <option value="Spring">Spring</option>
                            <option value="Summer">Summer</option>
                            <option value="Fall">Fall</option>
                            <option value="Winter">Winter</option>
                            <!-- Add more options based on your database contents -->
                        </select>
                    </div>

                    <div class="filter-item">
                        <label for="filter-indoor_outdoor">Indoor or Outdoor:</label>
                        <select id="filter-indoor_outdoor" name="indoor_outdoor">
                            <option value="">Any</option>
                            <option value="Indoors">Indoors</option>
                            <option value="Outdoors">Outdoors</option>
                            <!-- Add more options based on your database contents -->
                        </select>
                    </div>

                    <div class="filter-item">
                        <label for="filter-equipment">Equipment:</label>
                        <select id="filter-equipment" name="equipment">
                            <option value="">Any</option>
                            <option value="Yes">Yes</option>
                            <option value="No">No</option>
                            <!-- Add more options based on your database contents -->
                        </select>
                    </div>

                    <div class="filter-item">
                        <label for="filter-food">Food:</label>
                        <select id="filter-food" name="food">
                            <option value="">Any</option>
                            <option value="Yes">Yes</option>
                            <option value="No">No</option>
                            <!-- Add more options based on your database contents -->
                        </select>
                    </div>
                    <div class="filter-buttons">
                        <button type="submit">Search</button>
                    </div>
                </div>
            </form>
        </div>
        <!-- Add container for the cards -->
        <div class="container mt-4">
            <div class="section-title">
                <h2 id="about">Find the Perfect Activity for You.</h2>
                <p class="inline-p"><a href="#" id="filterButton">Filter</a></p>
                <p class="inline-p"><a href="/filter">Reset</a></p>
                <!--<p>Magnam dolores commodi suscipit. Necessitatibus eius consequatur ex aliquid fuga eum quidem. Sit sint consectetur velit. Quisquam quos quisquam cupiditate. Et nemo qui impedit suscipit alias ea. Quia fugiat sit in iste officiis commodi quidem hic quas.</p>-->
            </div>
            <div class="row">
                <% if (myactivity.length===0) { %>
                    <div class="col-12">
                        <br><br>
                        <h1 class="text-center">Sorry, no results.</h1>
                    </div>
                    <% } else { %>
                        <% for (let i=0; i < myactivity.length; i++) { %>
                            <% const activity=myactivity[i]; %>
                                <!-- Each card is in a column that spans 3 out of 12 columns -->
                                <div class="col-md-3 mb-4">
                                    <a href="/activity/<%= activity.id %>" class="card-link">
                                        <div class="card h-100">
                                            <% if (activity.image) { %>
                                                <img src="/<%= activity.image.substring(activity.image.indexOf('/') + 1) %>"
                                                    alt="Activity Image" class="card-img-top">
                                                <% } else { %>
                                                    <!-- Placeholder image or leave empty -->
                                                    <img src="/path/to/placeholder-image.jpg" alt="No image available"
                                                        class="card-img-top">
                                                    <% } %>
                                                        <div class="card-body">
                                                            <h5 class="card-title">
                                                                <%= activity.activity %>
                                                            </h5>
                                                            <p class="card-text">
                                                                <%= activity.description %>
                                                            </p>
                                                            <p class="card-text">
                                                                <%= activity.location %> - <%= activity.price %>
                                                            </p>
                                                        </div>
                                        </div>
                                    </a>
                                </div>
                                <% } %>
                                    <% } %>
            </div>
        </div>

        </div>

