      <script>
        // JavaScript function to fetch and display a random activity
        function generateRandomActivity() {
          fetch('/getRandomRecord') // Assuming your route for getting a random record is '/getRandomRecord'
            .then(response => response.json())
            .then(data => {
              // Display the details of the random activity
              const randomActivityDetails = document.getElementById('randomActivityDetails');
              randomActivityDetails.innerHTML = `
            <div class="row justify-content-center">
              <div class="col-md-6 mb-4">
                <a href="/activity/${data.id}" class="card-link">
                  <div class="card h-100">
                    ${data.image ? `<img src="/${data.image.substring(data.image.indexOf('/') + 1)}" alt="Activity Image" class="card-img-top">` : '<img src="/path/to/placeholder-image.jpg" alt="No image available" class="card-img-top">'}
                    <div class="card-body">
                      <h5 class="card-title">${data.activity}</h5>
                      <p class="card-text">${data.description}</p>
                      <p class="card-text">${data.location} - ${data.price}</p>
                    </div>
                  </div>
                </a>
              </div>
            </div>
          `;
            })
            .catch(error => {
              console.error('Error fetching random activity:', error);
              // Handle error, e.g., display an error message
            });
        }
